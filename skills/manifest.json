    },
    "security-patterns": {
      "triggers": [],
      "context": [],
      "file": "security-patterns.md",
      "priority": 0,
      "description": "Security vulnerability patterns. Auto-loaded with review, audit, ship, pr-review."
    },
    "remotion": {
      "triggers": ["remotion", "video composition", "animation"],
      "context": ["remotion/"],
      "file": "remotion/SKILL.md",
      "priority": 2,
      "description": "Remotion best practices - video creation in React. Compositions, animations, subtitles."
    }
  },
  "defaults": {
    "withPrdJson": ["core"],
    "withoutPrdJson": ["setup-project"],
    "always": []
  }
}
