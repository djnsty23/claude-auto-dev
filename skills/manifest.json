{
  "version": "4.8.0",
  "description": "Optimized skill system - complete synergy chains",
  "skills": {
    "core": {
      "triggers": [],
      "context": ["prd.json"],
      "file": "core/SKILL.md",
      "priority": 0,
      "description": "prd.json schema - auto-loaded when prd.json exists"
    },
    "code-quality": {
      "triggers": [],
      "context": [],
      "file": "code-quality/SKILL.md",
      "priority": 0,
      "description": "Learned patterns from production - loaded with auto/review/build"
    },
    "auto": {
      "triggers": ["auto"],
      "context": ["prd.json"],
      "file": "auto/SKILL.md",
      "requires": ["code-quality", "quality", "react-patterns", "verify", "browser-test", "security-patterns"],
      "priority": 1,
      "description": "Autonomous task execution with testing and security. Works through all tasks without stopping."
    },
    "brainstorm": {
      "triggers": ["brainstorm", "generate"],
      "context": [],
      "file": "brainstorm/SKILL.md",
      "requires": ["quality", "design"],
      "priority": 1,
      "description": "Scans codebase, proposes improvements and features autonomously."
    },
    "status": {
      "triggers": ["progress"],
      "context": ["prd.json"],
      "file": "status/SKILL.md",
      "priority": 2,
      "description": "Shows sprint progress and task status. Use 'progress' (not 'status' - that's a built-in)."
    },
    "sprint": {
      "triggers": ["sprint"],
      "context": ["prd.json"],
      "file": "sprint/SKILL.md",
      "priority": 1,
      "description": "Creates or advances sprints."
    },
    "review": {
      "triggers": ["review"],
      "context": [],
      "file": "review/SKILL.md",
      "requires": ["quality", "code-quality", "security-patterns", "self-review"],
      "priority": 1,
      "description": "Code quality check on recent changes. Includes security scanning."
    },
    "pr-review": {
      "triggers": ["pr"],
      "context": [],
      "file": "pr-review/SKILL.md",
      "requires": ["security-patterns", "code-quality"],
      "priority": 1,
      "description": "Comprehensive PR review using specialized agents."
    },
    "clean": {
      "triggers": ["clean"],
      "context": [],
      "file": "clean/SKILL.md",
      "priority": 2,
      "description": "Removes temporary artifacts and old backups."
    },
    "test": {
      "triggers": ["test", "e2e"],
      "context": ["*.test.*", "*.spec.*"],
      "file": "test/SKILL.md",
      "requires": ["browser-test"],
      "priority": 2,
      "description": "Runs unit and browser tests on latest changes."
    },
    "ship": {
      "triggers": ["ship"],
      "context": ["vercel.json"],
      "file": "ship/SKILL.md",
      "requires": ["review", "security-patterns", "test"],
      "priority": 3,
      "description": "Pre-deploy checklist with review, security, and test verification."
    },
    "fix": {
      "triggers": ["fix", "debug", "broken", "error"],
      "context": [],
      "file": "fix/SKILL.md",
      "priority": 2,
      "description": "Debugging and bug fixing patterns."
    },
    "setup-project": {
      "triggers": ["setup", "scaffold", "new-project"],
      "context": [],
      "file": "setup-project/SKILL.md",
      "priority": 3,
      "description": "Initialize project with prd.json and standard config."
    },
    "supabase": {
      "triggers": ["db", "supabase"],
      "context": ["supabase/"],
      "file": "supabase/SKILL.md",
      "requires": ["supabase-postgres", "supabase-schema"],
      "priority": 3,
      "description": "Supabase CLI patterns for database operations."
    },
    "supabase-postgres": {
      "triggers": ["postgres"],
      "context": ["supabase/"],
      "file": "supabase-postgres/SKILL.md",
      "priority": 2,
      "description": "Postgres performance optimization. Indexes, RLS, pooling, N+1."
    },
    "supabase-schema": {
      "triggers": ["rls"],
      "context": ["supabase/"],
      "file": "supabase-schema/SKILL.md",
      "priority": 3,
      "description": "SQL patterns, RLS policies, and security templates."
    },
    "audit": {
      "triggers": ["audit"],
      "context": [],
      "file": "audit/SKILL.md",
      "requires": ["quality", "code-quality", "design", "security-patterns", "browser-test"],
      "priority": 1,
      "description": "Parallel quality audit with 6 specialized agents including test coverage."
    },
    "browser-test": {
      "triggers": [],
      "context": [],
      "file": "browser-test/SKILL.md",
      "requires": ["agent-browser", "auth-token-injection"],
      "priority": 2,
      "description": "Browser testing with agent-browser CLI. Loaded via test skill."
    },
    "checkpoint": {
      "triggers": ["save"],
      "context": [],
      "file": "checkpoint/SKILL.md",
      "priority": 2,
      "description": "Saves context state. Auto-triggered every 3 tasks."
    },
    "deploy": {
      "triggers": [],
      "context": ["vercel.json"],
      "file": "deploy/SKILL.md",
      "requires": ["ci-cd"],
      "priority": 3,
      "description": "Internal deploy patterns. User-facing: use 'ship'."
    },
    "preserve-ui": {
      "triggers": [],
      "context": [],
      "file": "preserve-ui/SKILL.md",
      "priority": 2,
      "description": "Preserves existing UI structure when modifying components."
    },
    "quality": {
      "triggers": [],
      "context": [],
      "file": "quality/SKILL.md",
      "priority": 0,
      "description": "Enforces type safety, design tokens, and all UI states."
    },
    "react-patterns": {
      "triggers": [],
      "context": [],
      "file": "react-patterns/SKILL.md",
      "priority": 2,
      "description": "React/Next.js best practices and optimization patterns."
    },
    "self-review": {
      "triggers": [],
      "context": [],
      "file": "self-review/SKILL.md",
      "priority": 2,
      "description": "Scales review effort to task complexity."
    },
    "verify": {
      "triggers": ["verify"],
      "context": [],
      "file": "verify/SKILL.md",
      "requires": ["quality"],
      "priority": 2,
      "description": "Verifies work completeness."
    },
    "agent-browser": {
      "triggers": ["browser", "agent-browser", "web test", "ui test"],
      "context": [],
      "file": "agent-browser/SKILL.md",
      "priority": 3,
      "description": "Browser automation CLI reference. Also loaded with browser-test."
    },
    "archive-prd": {
      "triggers": ["archive"],
      "context": ["prd.json"],
      "file": "archive-prd/SKILL.md",
      "priority": 3,
      "description": "Archives completed stories from prd.json."
    },
    "auth-token-injection": {
      "triggers": [],
      "context": [],
      "file": "auth-token-injection/SKILL.md",
      "priority": 3,
      "description": "Auth token injection patterns for testing."
    },
    "build": {
      "triggers": [],
      "context": [],
      "file": "build/SKILL.md",
      "requires": ["code-quality"],
      "priority": 2,
      "description": "Hybrid task management architecture reference. Internal use."
    },
    "env-vars": {
      "triggers": ["env", "environment", "credentials", "secrets", "api key"],
      "context": [".env*"],
      "file": "env-vars/SKILL.md",
      "priority": 3,
      "description": "Environment variables and credentials patterns."
    },
    "design": {
      "triggers": ["design", "ui"],
      "context": [],
      "file": "design/SKILL.md",
      "requires": ["preserve-ui", "quality"],
      "priority": 1,
      "description": "Creates distinctive UI - avoids generic AI aesthetics."
    },
    "security-patterns": {
      "triggers": [],
      "context": [],
      "file": "security-patterns/SKILL.md",
      "priority": 0,
      "description": "Security vulnerability patterns. Auto-loaded with review, audit, ship."
    },
    "security": {
      "triggers": ["security"],
      "context": [],
      "file": "security/SKILL.md",
      "requires": ["security-patterns"],
      "priority": 1,
      "description": "Pre-deploy security audit. Run before every deploy."
    },
    "remotion": {
      "triggers": ["remotion", "video"],
      "context": ["remotion/"],
      "file": "remotion/SKILL.md",
      "priority": 2,
      "description": "Remotion best practices - video creation in React."
    },
    "ci-cd": {
      "triggers": ["ci"],
      "context": [".github/"],
      "file": "ci-cd/SKILL.md",
      "priority": 2,
      "description": "GitHub Actions workflows and CI/CD patterns."
    },
    "monitoring": {
      "triggers": ["logs"],
      "context": [],
      "file": "monitoring/SKILL.md",
      "priority": 2,
      "description": "Observability patterns - logging, error tracking, analytics."
    }
  },
  "defaults": {
    "withPrdJson": ["core"],
    "withoutPrdJson": ["setup-project"],
    "always": []
  }
}
