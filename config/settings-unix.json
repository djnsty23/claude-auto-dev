{
  "permissions": {
    "allow": [
      "Bash(npm *)",
      "Bash(git *)",
      "Bash(npx *)",
      "Bash(node *)",
      "Bash(ls *)",
      "Bash(mkdir *)",
      "Bash(cp *)",
      "Bash(mv *)",
      "Bash(supabase *)",
      "Bash(vercel *)",
      "Bash(agent-browser *)",
      "Read",
      "Edit",
      "Write",
      "Glob",
      "Grep",
      "WebFetch(domain:*)",
      "WebSearch",
      "Task",
      "TaskCreate",
      "TaskUpdate",
      "TaskList",
      "NotebookEdit",
      "mcp__supabase__*"
    ],
    "deny": [
      "Bash(rm -rf *)",
      "Bash(rm -r -f *)",
      "Bash(rm --recursive *)",
      "Bash(find * -delete)",
      "Bash(git push --force *)",
      "Bash(git push * --force *)",
      "Bash(git reset --hard *)",
      "Bash(git reset --hard)"
    ]
  },
  "model": "opus",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/session-start.sh",
            "statusMessage": "Loading context..."
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash|Read",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/pre-tool-filter.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/post-tool-typecheck.sh",
            "timeout": 60
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/stop-auto-check.sh",
            "timeout": 5,
            "statusMessage": "Checking auto mode..."
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "prompt",
            "prompt": "Evaluate if Claude should stop. Context: $ARGUMENTS\n\nRespond {\"ok\": false, \"reason\": \"...\"} if ANY of these are true:\n- User requested multiple items and not all are complete\n- Build or typecheck errors exist that weren't fixed\n- UI changes lack loading/error/empty states\n- No verification was done (build check missing)\n\nRespond {\"ok\": true} only if all work is genuinely complete and verified.",
            "timeout": 10,
            "statusMessage": "Verifying completion..."
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'if [ -f prd.json ]; then cp prd.json .claude/pre-compact-state.json; fi'",
            "timeout": 5,
            "statusMessage": "Saving sprint state..."
          }
        ]
      }
    ]
  },
  "thinkingEnabled": true
}
