{
  "permissions": {
    "allow": [
      "Bash(npm *)",
      "Bash(git *)",
      "Bash(npx *)",
      "Bash(node *)",
      "Bash(ls *)",
      "Bash(mkdir *)",
      "Bash(cp *)",
      "Bash(mv *)",
      "Bash(supabase *)",
      "Bash(vercel *)",
      "Bash(agent-browser *)",
      "Read",
      "Edit",
      "Write",
      "Glob",
      "Grep",
      "WebFetch(domain:*)",
      "WebSearch",
      "Task",
      "TaskCreate",
      "TaskUpdate",
      "TaskList",
      "NotebookEdit",
      "mcp__supabase__*"
    ],
    "deny": [
      "Bash(rm -rf *)",
      "Bash(rm -r -f *)",
      "Bash(rm --recursive *)",
      "Bash(find * -delete)",
      "Bash(git push --force *)",
      "Bash(git push * --force *)",
      "Bash(git reset --hard *)",
      "Bash(git reset --hard)",
      "Bash(git clean *)",
      "Bash(git checkout .)",
      "Bash(git checkout -- *)",
      "Bash(git restore .)",
      "Bash(git restore --staged .)",
      "Bash(git stash drop *)",
      "Bash(git stash clear)",
      "Bash(git branch -D *)",
      "Bash(rm -r *)"
    ]
  },
  "model": "opus",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"%USERPROFILE%/.claude/hooks/session-start.js\"",
            "timeout": 15,
            "statusMessage": "Loading context..."
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash|Read|Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "node \"%USERPROFILE%/.claude/hooks/pre-tool-filter.js\"",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "node \"%USERPROFILE%/.claude/hooks/post-tool-typecheck.js\"",
            "timeout": 60
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"%USERPROFILE%/.claude/hooks/stop-auto-check.js\"",
            "timeout": 5,
            "statusMessage": "Checking auto mode..."
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node -e \"const fs=require('fs');if(fs.existsSync('prd.json')){fs.mkdirSync('.claude',{recursive:true});fs.copyFileSync('prd.json','.claude/pre-compact-state.json')}\"",
            "timeout": 5,
            "statusMessage": "Saving sprint state..."
          }
        ]
      }
    ]
  },
  "thinkingEnabled": true,
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "teammateMode": "in-process"
}
