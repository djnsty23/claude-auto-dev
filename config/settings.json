{
  "permissions": {
    "allow": [
      "Bash(npm *)",
      "Bash(git *)",
      "Bash(npx *)",
      "Bash(node *)",
      "Bash(ls *)",
      "Bash(cat *)",
      "Bash(mkdir *)",
      "Bash(cp *)",
      "Bash(mv *)",
      "Bash(rm *)",
      "Bash(supabase *)",
      "Bash(vercel *)",
      "Bash(agent-browser *)",
      "Read",
      "Edit",
      "Write",
      "Glob",
      "Grep",
      "WebFetch(domain:*)",
      "WebSearch",
      "Task",
      "TaskCreate",
      "TaskUpdate",
      "TaskList",
      "NotebookEdit",
      "mcp__*"
    ],
    "deny": []
  },
  "model": "opus",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "powershell -WindowStyle Hidden -ExecutionPolicy Bypass -File \"$env:USERPROFILE\\.claude\\hooks\\session-start.ps1\"",
            "statusMessage": "Loading context..."
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "prompt",
            "prompt": "Evaluate if Claude should stop. Context: $ARGUMENTS\n\nRespond {\"ok\": false, \"reason\": \"...\"} if ANY of these are true:\n- User requested multiple items and not all are complete\n- Build or typecheck errors exist that weren't fixed\n- UI changes lack loading/error/empty states\n- No verification was done (build check missing)\n\nRespond {\"ok\": true} only if all work is genuinely complete and verified.",
            "timeout": 10,
            "statusMessage": "Verifying completion..."
          }
        ]
      }
    ]
  },
  "thinkingEnabled": true
}
